<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Menedżer Zleceń{% endblock %}</title>
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset("img/icon.png") }}" />
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    {% endblock %}
</head>
<body>
    <div class="text-center" >
    <form class="form-signin" method="post" autocomplete="off">
        <img class="mb-4" src="{{ asset('img/icon.png') }}" alt="" width="72" height="72">
        <h5 class="h6 mb-3 font-weight-normal">Menedżer Zleceń dla Kadamaxo</h5>

        {% if error %}<div class="alert alert-danger">{{ error.messageKey | trans(error.messageData, 'security') }}</div>{% endif %}
        
        <input name="username" type="text" class="form-control" placeholder="login" required autofocus>
        <br/>
        <input name="password" type="password" class="form-control" placeholder="hasło" required>
        <br/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Zaloguj</button>
        <p class="mt-5 mb-3 text-muted">© Order Manager 2020-2021</p>
    </form>
    </div>
    <style>
        body{
            background-color: rgb(29,32,35);
        }

        .form-control{
            background-color: rgb(45,50,55);
            border-radius: 20px;
            height: 45px;
            padding: 10px 30px;
            border: none;
        }
        .form-control{
            background-color: rgb(45,50,55);
            border: none;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            color: white;
        }
        .form-control:focus{
            background-color: rgb(45,50,55);
            box-shadow: 0 0 5px rgba(255, 255, 255, 0.1);
            color: white;
        }
        .btn-primary, .btn-primary:focus, .btn-primary:hover{
            background-color: rgb(8,192,107);
            border: none;
            box-shadow: none;
            padding-right: 40px;
            padding-left: 40px;
            border-radius: 30px;
        }
        .text-center{
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%,-50%);

            width: 500px;
            background-color: rgb(29,32,35);
            padding: 20px;
            padding-left: 80px;
            padding-right: 80px;
            color: white;
        }
    </style>
</body>