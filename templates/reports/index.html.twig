{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    - Raporty
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("css/reports.css") }}"/>
    <link rel="stylesheet" href="{{ asset("css/popups.css") }}"/>
{% endblock %}

{% block javascript %}
{{ parent() }}
<script type="text/javascript" src="{{ asset("js/popup-manager.js") }}"></script>
<script type="text/javascript" src="{{ asset("js/reports-controller.js") }}"></script>
<script>
$(document).ready(function (){
    window.controller = new Controller($(document));
});
</script>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-3" style=" height: 100%;">
            <div class="column left-col js-left-col">
                <header>
                    <div class="icon" style="float: left;">
                        {% include 'icons/report.html' %}
                    </div>
                    Raporty
                    <div style="clear: both;"></div>
                </header>
                <div class="col-content" id="reports-content">
                        {% for key, report in reports %}
                            <div class="reports-list-element js-reports-list-element" data-report-id="{{ key }}">
                                {{ report }}
                            </div>
                        {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-lg-9" style="height: 100%;">
            <div class="column mid-col js-mid-col">
                <header>
                    PodglÄ…d
                    <span class="js-subject-id"></span>
                    <div class="js-burger">
                        {% include 'burger.html.twig' with {'options': null} %}
                    </div>
                </header>
                <div class="col-content js-col-content">
                    <div class="table-container js-table-container">
                        <div class="alert alert-info">{{ "Select report to execute." | trans }}</div>
                    </div>
                    <div class="rows-count-container js-rows-count-container">
                        {% include 'rows_count.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}