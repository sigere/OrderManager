    <script type="text/javascript" src="{{ asset("js/base.js") }}"></script>
    <script type="text/javascript" src="{{ asset("js/jquery.tablesorter.min.js") }}"></script>
    <script type="text/javascript" src="{{ asset("js/jquery.query-object.js") }}"></script>
