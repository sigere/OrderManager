{% if entry.getWarnings is not empty %}
    <div class="warning">
        <ul class="list-group">
            {% for w in entry.getWarnings %}
                <li>{{ w }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

<div class="property">
    <div class="name">Powiązane zlecenie</div>
    <div class="value">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-vector-pen" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M10.646.646a.5.5 0 0 1 .708 0l4 4a.5.5 0 0 1 0 .708l-1.902 1.902-.829 3.313a1.5 1.5 0 0 1-1.024 1.073L1.254 14.746 4.358 4.4A1.5 1.5 0 0 1 5.43 3.377l3.313-.828L10.646.646zm-1.8 2.908-3.173.793a.5.5 0 0 0-.358.342l-2.57 8.565 8.567-2.57a.5.5 0 0 0 .34-.357l.794-3.174-3.6-3.6z"/>
            <path fill-rule="evenodd" d="M2.832 13.228 8 9a1 1 0 1 0-1-1l-4.228 5.168-.026.086.086-.026z"/>
        </svg>
        {{ entry.order.id }}
    </div>
</div>
<div style="clear:both;"></div>

<div class="property">
    <div class="name">Numer</div>
    <div class="value">{{ entry.formattedNumber }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
    <div class="name">Organ wydający</div>
    <div class="value">{{ entry.documentIssuer | default('brak') }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
    <div class="name">Dodatkowe uwagi</div>
    <div class="value">{{ entry.comments | default('brak uwag') }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
    <div class="name">Kopie dodatkowe</div>
    <div class="value">{{ entry.copies }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
    <div class="name">Cena za kopię</div>
    <div class="value">{{ entry.copyPrice }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
    <div class="name">Data dokumentu</div>
    <div class="value">{{ entry.documentDate | date('d.m.Y H:i') }}</div>
</div>
<div style="clear:both;"></div>