{% if order.getWarnings is not empty %}
	<div class="warning">
		<ul class="list-group">
			{% for w in order.getWarnings %}
				<li>{{ w }}</li>
			{% endfor %}
		</ul>
	</div>
{% endif %}


<div class="property">
	<div class="name">Wprowadzono</div>
	<div class="value">{{ order.adoption | date('d-m-Y H:i') }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
	<div class="name">Klient</div>
	<div class="value">{{ order.client.name }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
	<div class="name">Temat</div>
	<div class="value">{{ order.topic }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
	<div class="name">Język</div>
	<div class="value">{{ order.baseLang }}
		->
		{{ order.targetLang }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
	<div class="name">Wykonawca</div>
	<div class="value">{{ order.staff }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
	<div class="name">Status</div>
	<div class="value">{{ order.state }}</div>
</div>
<div style="clear:both;"></div>

<a href="#">
	<div class="invoice">
		Faktura
	</div>
</a>

<div class="logs">
	<table class="table table-dark">
		<thead>
			<th>Data</th>
			<th>Użytkownik</th>
			<th>Akcja</th>
		</thead>
		<tbody>
			{% for l in logs %}
				<tr>
					<td style="width: min-content;">{{ l.createdAt | date('d=m-Y H:i:j') }}</td>
					<td style="width: min-content;">{{ l.user }}</td>
					<td>{{ l.action }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
