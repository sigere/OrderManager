<div class="add-form-container">
    {% if update is defined and update == true %}
        <h4>Edytuj klienta</h4>
    {% else %}
        <h4>Dodaj nowego klienta</h4>
    {% endif %}
    {{ form_start(addClientForm, {'attr':{'name': 'add_client_form', 'id': 'add-client-form'}}) }}
    {% for row in addClientForm %}
        {% if not loop.last %}
            <div class="add-form-row">
                <span style="color: red;">{{ form_errors(row) }}</span>
                <div class="add-form-label">
                    {{ form_label(row, null, {'label_attr': {'state': row.vars.label|lower}}) }}
                    {% if row.vars.required %}*{% endif %}
                </div>
                <div class="add-form-widget">
                    {{ form_widget(row,{'attr': {}}) }}
                </div>
                <div style="clear: both;"></div>
            </div>
        {% endif %}
    {% endfor %}
    <div class="add-form-submit-container">
        <button type="submit" class="btn btn-primary">OK</button>
    </div>
    {{ form_end(addClientForm) }}
</div>
