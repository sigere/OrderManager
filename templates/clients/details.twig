{% if client.deletedAt is not null %}
    <div class="alert alert-danger">Klient został usunięty {{ client.deletedAt|date("d-m-Y H:i") }}.
    </div>
{% endif %}

<div class="property">
    <div class="name">Alias</div>
    <div class="value">{{ client.alias }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
    <div class="name">Nazwa</div>
    <div class="value">{{ client.name }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
    <div class="name">NIP</div>
    <div class="value">{{ client.nip }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
    <div class="name">Adres</div>
    <div class="value">{{ client.street }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
    <div class="name">Poczta</div>
    <div class="value">{{ client.postCode }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
    <div class="name">Miasto</div>
    <div class="value">{{ client.city }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
    <div class="name">Kraj</div>
    <div class="value">{{ client.country }}</div>
</div>
<div style="clear:both;"></div>

<div class="property">
    <div class="name">E-mail</div>
    <div class="value">
        {% if not client.email %}
            {% include 'icons/warning.html' %}
        {% endif %}
        {{ client.email|default("brak") }}
    </div>
</div>
<div style="clear:both;"></div>

<div class="property">
    <div class="name">Dodano</div>
    <div class="value">{{ client.createdAt | date('d.m.Y H:i') }}</div>
</div>
<div style="clear:both;"></div>


<div class="logs">
    <table class="table table-dark">
        <thead>
        <th>Data</th>
        <th>Użytkownik</th>
        <th>Akcja</th>
        </thead>
        <tbody>
        {% for l in logs %}
            <tr>
                <td style="width: min-content;">{{ l.createdAt | date('d-m-Y H:i:s') }}</td>
                <td style="width: min-content;">{{ l.user }}</td>
                <td>{{ l.action }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
